<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">@color/blue_find</item>
        <item name="colorControlHighlight">@color/selectedNavigationItem</item>

        <!--<item name="android:actionMenuTextColor">@color/blue</item>-->
        <!--<item name="android:windowActionModeOverlay">true</item>-->

        <item name="android:spinnerDropDownItemStyle">@style/LanguageDropDownSpinnerStyle</item>
        <item name="android:dropDownListViewStyle">@style/App.Style.Spinner</item>

        <item name="popupMenuStyle">@style/PopupMenu</item>

        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>

    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="PopupMenu" parent="@style/Widget.AppCompat.Light.PopupMenu">
        <item name="overlapAnchor">true</item>
    </style>

    <style name="LanguageDropDownSpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="App.Style.Spinner" parent="@style/Widget.AppCompat.ListView.DropDown">
        <item name="android:dividerHeight">0.05dip</item>
        <item name="android:divider">@color/light_gray</item>
        <item name="overlapAnchor">false</item>
    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DrawerCustomMenuTextApearance" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@android:color/primary_text_dark</item>
    </style>

</resources>
